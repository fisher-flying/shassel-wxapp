.banner image{height: 450rpx;}
.news{background: #f2e9da;margin: 20rpx;margin-bottom: 80rpx;box-shadow: 0 0 16rpx #a17c63;border-radius: 6rpx;}

.title{display: flex;justify-content: space-between;color: #fff;padding: 18rpx;border-radius: 6rpx;background: url("http://ai.ylcaifu.com/appimg/weChat/icon5.png") no-repeat 100% 100%;background-size: cover;}
.title .name{font-family: "宋体";font-size: 18px;font-weight: 900;}
.title .more{font-size: 24rpx;}

.list-story{margin-bottom: 60rpx;}
.list-story .item{background: #f7f2e9;border: 1px solid #d0b9a0;border-radius: 10rpx;padding: 8rpx 14rpx;margin-top: 40rpx;display: flex;align-items: center;position: relative;font-size: 28rpx;}
.list-story .item image{width:300rpx;height: 200rpx;}
.list-story .item .tit{padding-left: 18rpx;width: calc(100% - 300rpx);color: #6d4a2c;max-height: 190rpx;line-height: 48rpx;}
.list-story .item .tit::before{content: "";position: absolute;right: 30rpx;bottom: 12rpx;border-top: 1px solid #9d7248;width: calc(100% - 356rpx);}
.list-story .item .tit::after{content: "......";position: absolute;right: 30rpx;bottom: 10rpx;color: #6d4a2c;}


.list-last .item{background: #f7f2e9;border: 1px solid #d0b9a0;padding: 14rpx;margin: 10rpx 0 30rpx;}
.list-last image{height: 310rpx;}
.list-last .tit{color:#6d4a2c;font-size: 30rpx;padding: 10rpx 0;}